<!-- Recent Posts Section -->
<div class="row">
    <div class="col-12">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h2 class="h3 fw-bold mb-0">
                <i class="bi bi-clock-history me-2"></i>Recent Posts
            </h2>
            <!--
            <a href="/posts/" class="btn btn-outline-primary">
                View All Posts <i class="bi bi-arrow-right ms-1"></i>
            </a>
            -->
        </div>
    </div>
</div>

<div class="row">
    {% for post in collections.posts limit:6 %}
    <div class="col-lg-6 mb-4">
        <article class="card h-100 border-0 shadow-sm post-list-item">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-light text-muted rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                        <i class="bi bi-calendar3"></i>
                    </div>
                    <div>
                        <time class="text-muted small">{{ post.date | date }}</time>
                    </div>
                </div>
                
                <h3 class="h5 fw-bold mb-3">
                    <a href="{{ post.url }}" class="text-decoration-none stretched-link">
                        {{ post.data.title }}
                    </a>
                </h3>
                
                {% if post.data.description %}
                <div class="text-muted mb-3">{{ post.data.description | markdown_no_links | truncate: 120 }}</div>
                {% endif %}
                
                {% if post.data.tags and post.data.tags.length > 0 %}
                <div class="d-flex flex-wrap gap-1">
                    {% for tag in post.data.tags | limit(3) %}
                    <span class="badge bg-light text-dark border">
                        <i class="bi bi-tag me-1"></i>{{ tag }}
                    </span>
                    {% endfor %}
                    {% if post.data.tags.length > 3 %}
                    <span class="badge bg-light text-muted border">
                        +{{ post.data.tags.length | minus: 3 }} more
                    </span>
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </article>
    </div>
    {% endfor %}
</div>


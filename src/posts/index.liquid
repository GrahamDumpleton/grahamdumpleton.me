---
layout: base
title: All Posts
permalink: /posts/
---

<div class="row">
    <div class="col-12">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h1 class="h2 fw-bold mb-0">
                <i class="bi bi-journal-text me-2"></i>All Posts
            </h1>
            <a href="/" class="btn btn-outline-primary">
                <i class="bi bi-house me-1"></i>Back to Home
            </a>
        </div>
        
        <p class="text-muted mb-4">
            Explore all {{ collections.posts | length }} posts about Python, WSGI, web development, and more.
        </p>
    </div>
</div>

<!-- Search Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" class="form-control" id="searchInput" placeholder="Search posts by title or content...">
        </div>
    </div>
</div>

<!-- Posts Grid -->
<div class="row" id="postsContainer">
    {% for post in collections.posts | reverse %}
    <div class="col-lg-6 mb-4 post-item" data-title="{{ post.data.title | downcase }}" data-content="{{ post.content | strip_html | downcase | escape }}">
        <article class="card h-100 border-0 shadow-sm post-list-item">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-light text-muted rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                        <i class="bi bi-calendar3"></i>
                    </div>
                    <div>
                        <time class="text-muted small">{{ post.date | date }}</time>
                        {% if post.data.author %}
                        <div class="text-muted small">
                            <i class="bi bi-person me-1"></i>{{ post.data.author }}
                        </div>
                        {% endif %}
                    </div>
                </div>
                
                <h3 class="h5 fw-bold mb-3">
                    <a href="{{ post.url }}" class="text-decoration-none text-dark stretched-link">
                        {{ post.data.title }}
                    </a>
                </h3>
                
                {% if post.data.description %}
                <div class="text-muted mb-3">{{ post.data.description | markdown_no_links | truncate: 150 }}</div>
                {% endif %}
                
                {% if post.data.tags and post.data.tags.size > 0 %}
                <div class="d-flex flex-wrap gap-1">
                    {% for tag in post.data.tags limit:4 %}
                    <span class="badge bg-light text-dark border">
                        <i class="bi bi-tag me-1"></i>{{ tag }}
                    </span>
                    {% endfor %}
                    {% if post.data.tags.size > 4 %}
                    <span class="badge bg-light text-muted border">
                        +{{ post.data.tags.size | minus: 4 }} more
                    </span>
                    {% endif %}
                </div>
                {% endif %}
                
                {% if post.data.originalUrl %}
                <div class="mt-3">
                    <a href="{{ post.data.originalUrl }}" class="btn btn-outline-primary btn-sm" target="_blank" rel="noopener">
                        <i class="bi bi-box-arrow-up-right me-1"></i>Original Post
                    </a>
                </div>
                {% endif %}
            </div>
        </article>
    </div>
    {% endfor %}
</div>

<!-- No Results Message -->
<div id="noResults" class="text-center py-5" style="display: none;">
    <div class="card border-0 shadow-sm">
        <div class="card-body p-5">
            <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
            <h3 class="h5 fw-bold mt-3 mb-2">No posts found</h3>
            <p class="text-muted mb-0">Try adjusting your search terms or filters.</p>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const postsContainer = document.getElementById('postsContainer');
    const noResults = document.getElementById('noResults');
    const postItems = document.querySelectorAll('.post-item');
    
    function filterPosts() {
        const searchTerm = searchInput.value.toLowerCase();
        let visibleCount = 0;
        
        postItems.forEach(item => {
            const title = item.dataset.title;
            const content = item.dataset.content;
            
            const matchesSearch = !searchTerm || 
                title.includes(searchTerm) || 
                content.includes(searchTerm);
            
            if (matchesSearch) {
                item.style.display = 'block';
                visibleCount++;
            } else {
                item.style.display = 'none';
            }
        });
        
        if (visibleCount === 0) {
            postsContainer.style.display = 'none';
            noResults.style.display = 'block';
        } else {
            postsContainer.style.display = 'block';
            noResults.style.display = 'none';
        }
    }
    
    searchInput.addEventListener('input', filterPosts);
    
    // Add smooth scrolling for search results
    searchInput.addEventListener('keydown', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            const firstVisible = document.querySelector('.post-item[style*="block"]');
            if (firstVisible) {
                firstVisible.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }
    });
});
</script>